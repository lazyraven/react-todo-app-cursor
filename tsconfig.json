{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": [
        "src"
    ]
}